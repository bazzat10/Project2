<div class="container">
  <h1 class="inner-cover">Ella's Online Bookstore </h1>

  <form name="form-signin" action="/login" method="post">
    <h2 class="form-signin-heading">Please sign in</h2>
    <label class="sr-only">Email Address</label>
    <input class="form-control" name="email" type="email" placeholder="Email Address" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input class="form-control" name="password" type="password" placeholder="Password" required>

    <button class="btn btn-lg btn-primary btn-block">Login</button>
  </form>

  <form action="/create_user">
    <button class="btn btn-lg btn-primary btn-block">Create new user</button>
  </form>
</div>
